@model cursach.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}
<div class="container">
    <div class="jumbotron">
        <hgroup class="title">
            <h1>@ViewBag.Title</h1>
        </hgroup>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-sm-7">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                    <p class="help-inline">@Html.ValidationMessageFor(m => m.UserName)</p>
                </div>
                <div class="col-sm-7">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    <p class="help-inline">@Html.ValidationMessageFor(m => m.Password)</p>
                </div>
                <div class="col-sm-7">
                    @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "Password confirm"})
                    <p class="help-inline">@Html.ValidationMessageFor(m => m.ConfirmPassword)</p>
                </div>
                <div class="col-sm-7">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    <p class="help-inline">@Html.ValidationMessageFor(m => m.Email)</p>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-ok"></span> Sing up</button>
            @Html.ActionLink("Log in", "Login", "Account", new { @class = "btn btn-success btn-lg" })
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
