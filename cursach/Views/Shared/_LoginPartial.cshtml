@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @style="position: absolute; left: -2000%", id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }
    <li>
        <a href="../Account/Manage" class="username"><span class="glyphicon glyphicon-user"></span> @User.Identity.Name</a>
    </li>
    <li>
        <a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Log out</a>
    </li>
}
else
{
    <li>@Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>
        <a href=@Url.Action("Login", "Account") id="loginLink"><span class="glyphicon glyphicon-log-in"></span> Log in</a>
    </li>
}
